<h1>Teendők listája</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
      method="get" action="/list">
    <div class="form-group">
      <div class="col-lg-10">
        <input type="search" class="form-control" 
               name="kereses" id="kereses" value="{{kereses}}"
               placeholder="Írja le, hogy milyen teendőt keres..."></textarea>
      </div>
      <div class="col-lg-2">
            <button type="submit" class="btn btn-info pull-left">
                <span class="glyphicon glyphicon-search"></span>
            </button>
      </div>
    </div>
</form>
<table class="table table-striped">
    <tr>
        <th>Beküldés ideje</th>
        <th>Teendő elvégzője</th>
        <th>Teendő leírása</th>
        <th class="text-right">Műveletek</th>
    </tr>
    {{#each todos as |todo|}}
    <tr class="text-{{#if todo.kesz}}success{{else}}warning{{/if}}">
        <td>{{todo.datum}}</td>
        <td>{{todo.kinek}}</td>
        <td>{{todo.leiras}}</td>
        <td class="text-right">
            {{#unless todo.kesz}}
            <a class="btn btn-sm btn-success" href="/ready/{{todo.id}}">
                <span class="glyphicon glyphicon-ok"></span>
            </a>
            {{/unless}}
            <a class="btn btn-sm btn-info" href="/todo/{{todo.id}}">
                <span class="glyphicon glyphicon-eye-open"></span>
            </a>
            <a class="btn btn-sm btn-danger" href="/delete/{{todo.id}}">
                <span class="glyphicon glyphicon-remove"></span>
            </a>
        </td>
    </tr>
    {{/each}}
</table> 